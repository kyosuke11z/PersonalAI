<Window x:Class="PersonalAI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalAI"
        mc:Ignorable="d"
        Title="ตั้งค่าแอปพลิเคชัน" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- สไตล์สำหรับปุ่ม -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#6200EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7E57C2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4A148C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- สไตล์สำหรับปุ่มรอง -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#03DAC6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00BFA5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#00897B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- สไตล์สำหรับกล่องข้อความ -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6200EE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- สไตล์สำหรับแผงการ์ด -->
        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- หัวข้อ -->
        <TextBlock Grid.Row="0" Text="ตั้งค่าแอปพลิเคชัน" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" Foreground="#6200EE"/>
        
        <!-- แผงตั้งค่า -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <!-- แท็บตั้งค่า AI -->
            <TabItem Header="ตั้งค่า AI">
                <Border Style="{StaticResource CardPanel}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="URL ของ AI Server (LM Studio)" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#424242"/>
                        <TextBox x:Name="AIServerUrlTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,20"/>
                        
                        <TextBlock Text="API Key (ถ้ามี)" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#424242"/>
                        <TextBox x:Name="APIKeyTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,20"/>
                        
                        <TextBlock Text="ตัวเลือกโมเดล" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#424242"/>
                        <ComboBox x:Name="ModelComboBox" Padding="10,8" Margin="0,0,0,20">
                            <ComboBoxItem Content="Google Gamma"/>
                            <ComboBoxItem Content="Mistral"/>
                            <ComboBoxItem Content="Dolphin"/>
                            <ComboBoxItem Content="Llama 3"/>
                        </ComboBox>
                        
                        <TextBlock Text="ความยาวสูงสุดของการตอบกลับ" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#424242"/>
                        <Slider x:Name="MaxTokensSlider" Minimum="100" Maximum="2000" Value="500" 
                                TickFrequency="100" IsSnapToTickEnabled="True" Margin="0,0,0,5"/>
                        <TextBlock x:Name="MaxTokensTextBlock" Text="500 tokens" HorizontalAlignment="Right" Margin="0,0,0,20"/>
                        
                        <Button Content="ทดสอบการเชื่อมต่อ" Style="{StaticResource ModernButton}" 
                                HorizontalAlignment="Left" Click="TestConnectionButton_Click"/>
                    </StackPanel>
                </Border>
            </TabItem>
            
            <!-- แท็บจัดการข้อมูล -->
            <TabItem Header="จัดการข้อมูล">
                <Border Style="{StaticResource CardPanel}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="นำเข้า/ส่งออกข้อมูล" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="#424242"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Button Content="นำเข้าข้อมูล" Style="{StaticResource ModernButton}" Margin="0,0,10,0" Click="ImportDataButton_Click"/>
                            <Button Content="ส่งออกข้อมูล" Style="{StaticResource ModernButton}" Click="ExportDataButton_Click"/>
                        </StackPanel>
                        
                        <TextBlock Text="ล้างข้อมูล" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#424242"/>
                        <TextBlock Text="คำเตือน: การล้างข้อมูลจะลบข้อมูลทั้งหมดออกจากฐานข้อมูล และไม่สามารถกู้คืนได้" 
                                   TextWrapping="Wrap" Foreground="#F44336" Margin="0,0,0,10"/>
                        
                        <Button Content="ล้างข้อมูลทั้งหมด" Background="#F44336" Foreground="White" 
                                Style="{StaticResource ModernButton}" HorizontalAlignment="Left" Click="ClearDataButton_Click"/>
                    </StackPanel>
                </Border>
            </TabItem>
            
            <!-- แท็บเกี่ยวกับ -->
            <TabItem Header="เกี่ยวกับ">
                <Border Style="{StaticResource CardPanel}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="ผู้ช่วย AI ส่วนตัวของฉัน" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="#6200EE"/>
                        <TextBlock Text="เวอร์ชัน 0.2" FontSize="16" Margin="0,0,0,20"/>
                        
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                            แอปพลิเคชันนี้เป็นผู้ช่วย AI ส่วนตัวที่เข้าใจอารมณ์ ความชอบ และจังหวะชีวิตของผู้ใช้
                            โดยเน้นทั้งความบันเทิง (เพลงร็อค/เกม) และสุขภาพใจ (การติดตามอารมณ์/ความเครียด)
                        </TextBlock>
                        
                        <TextBlock Text="เทคโนโลยีที่ใช้:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Margin="0,0,0,20">
                            <Run>• .NET 8</Run><LineBreak/>
                            <Run>• WPF</Run><LineBreak/>
                            <Run>• ML.NET</Run><LineBreak/>
                            <Run>• SQLite (Entity Framework Core)</Run><LineBreak/>
                            <Run>• LM Studio</Run>
                        </TextBlock>
                        
                        <TextBlock Text="© 2023 Personal AI Companion" HorizontalAlignment="Center" Margin="0,20,0,0" Opacity="0.7"/>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>
        
        <!-- ปุ่มด้านล่าง -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveButton" Content="บันทึก" Style="{StaticResource ModernButton}" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="ยกเลิก" Style="{StaticResource SecondaryButton}" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>